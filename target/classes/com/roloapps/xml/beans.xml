<!-- <bean id="persona" class="com.roloapps.beans.Persona" autowire="byName" scope="singleton" lazy-init="true"> -->
<!-- Singleton viene por defecto, instancia el mismo objeto, con prototype son distintos objetos -->
<!-- Lazy init solo invoca en App.java cuando sea requerida en getBean, no cuando se crea la app -->
<bean id="persona" class="com.roloapps.beans.Persona">
<property name="pais" ref="pais"></property>
<property name="id" value="1"></property>
<property name="nombre" value="Rolo"></property>
<property name="apodo" value="RoloApps"></property>
</bean>

<bean id="pais" class="com.roloapps.beans.Pais">
	<property name="nombre" value="Chile"></property>
	<property name="ciudades"> <!-- Dentro de Property igual que arriba, 2 maneras de hacerlo -->
	<list>
	<ref bean="ciudad1"/>
	<ref bean="ciudad2"/>
	<ref bean="ciudad3"/>
	</list>
	</property>
</bean>

	<bean id="ciudad1" class="com.roloapps.beans.Ciudad">
	<property name="nombre" value="Arauco"></property>
	</bean>
	
	<bean id="ciudad2" class="com.roloapps.beans.Ciudad">
	<property name="nombre" value="Concepcion"></property>
	</bean>
	
	<bean id="ciudad3" class="com.roloapps.beans.Ciudad">
	<property name="nombre" value="Santiago"></property>
	</bean>

</beans>
